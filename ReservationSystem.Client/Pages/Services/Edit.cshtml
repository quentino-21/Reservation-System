@page
@model EditModelServices
@{
    ViewData["Title"] = "Edytuj usługę";
}

<h2>Edytuj usługę</h2>

@if (Model.StatusMessage != null)
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}

<form method="post">
    <input type="hidden" asp-for="Product.Id" />
    <div class="form-group">
        <label for="Name">Nazwa</label>
        <input asp-for="Product.Name" class="form-control"/>
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Opis</label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Duration">Czas trwania</label>
        <input asp-for="Product.Duration" type="text" class="form-control" placeholder="hh:mm:ss"/>
        <span asp-validation-for="Product.Duration" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Price">Cena</label>
        <input asp-for="Product.Price" type="number" step="0.01" class="form-control"/>
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-page="/Services/Details" asp-route-id="@Model.Product.Id" class="btn btn-secondary">Anuluj</a>
</form>